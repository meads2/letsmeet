{
  "name": "letsmeet",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "sh -c 'cd apps/api && bun --watch src/index.ts & cd apps/mobile && expo start'",
    "dev:api": "cd apps/api && bun --watch src/index.ts",
    "dev:mobile": "cd apps/mobile && expo start",
    "dev:ios": "sh -c 'cd apps/api && bun --watch src/index.ts & cd apps/mobile && expo start --ios'",
    "dev:android": "sh -c 'cd apps/api && bun --watch src/index.ts & cd apps/mobile && expo start --android'",
    "build": "bun run --filter='*' build",
    "build:api": "cd apps/api && bun build src/index.ts --outdir=dist --target=bun --sourcemap",
    "build:mobile": "cd apps/mobile && expo export",
    "start": "cd apps/mobile && expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "cd apps/mobile && expo start --android",
    "ios": "cd apps/mobile && expo start --ios",
    "web": "cd apps/mobile && expo start --web",
    "lint": "bun run --filter='*' lint"
  },
  "dependencies": {
    "@clerk/clerk-expo": "^2.19.23",
    "@expo/vector-icons": "^15.0.3",
    "@fastify/compress": "^6.5.0",
    "@fastify/helmet": "^11.1.0",
    "@neondatabase/serverless": "^1.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "@statsig/expo-bindings": "^3.31.2",
    "@stripe/stripe-react-native": "0.50.3",
    "@tanstack/react-query": "^5.0.0",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "expo": "~54.0.33",
    "expo-application": "~7.0.8",
    "expo-blur": "~15.0.8",
    "expo-constants": "~18.0.13",
    "expo-device": "~8.0.10",
    "expo-font": "~14.0.11",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-image-picker": "~17.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-location": "~19.0.8",
    "expo-router": "~6.0.23",
    "expo-secure-store": "~15.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-symbols": "~1.0.8",
    "expo-system-ui": "~6.0.9",
    "expo-web-browser": "~15.0.10",
    "ioredis": "^5.9.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-deck-swiper": "^2.0.17",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@types/ioredis": "^5.0.0",
    "@types/react": "~19.1.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "typescript": "~5.9.2"
  }
}
